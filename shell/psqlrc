-- Suppress Postgres' welcome message
\set QUIET on

-- Set NULL values to '[NULL]' in query results for better visibility
\pset null '[NULL]'

-- Create seperate history files per-database
\set HISTFILE ~/.psql_history- :DBNAME

-- Prevent duplicate consecutive commands from being stored in the history file
\set HISTCONTROL ignoredups

-- Allow normal Postgres messages to be displayed after config session
\set QUIET off
