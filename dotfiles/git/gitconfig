[alias]
  l = log --pretty=basic
  lt = log --pretty=time
  la = log --pretty=author
  lta = log --pretty=timeauthor
  aa = add --all
  ap = add --patch
  ci = commit -v
  co = checkout
  st = status
[color]
  ui = auto
[commit]
  template = ~/.gitmessage
[core]
  autocrlf = input
  excludesfile = ~/.gitignore
[credential]
  helper = osxkeychain
[diff]
  noprefix = true
  tool = vimdiff
[fetch]
  prune = true
[github]
  user = croaky
[include]
  path = ~/.gitconfig.local
[merge]
  ff = only
  tool = vimdiff
[mergetool "vimdiff"]
  cmd = vimdiff -f $LOCAL $MERGED $REMOTE
[pretty]
  basic = format:%Cred%h%Creset %s%Creset
  time = format:%Cred%h%Creset %s %Cgreen(%cr)%Creset
  author = format:%Cred%h%Creset %s %C(bold blue)%an%Creset
  timeauthor = format:%Cred%h%Creset %s %Cgreen(%cr) %C(bold blue)%an%Creset
[push]
  default = current
[pull]
  ff = only
[rebase]
  autosquash = true
[rerere]
  enabled = true
[user]
  name = Dan Croak
  email = dan@statusok.com
[init]
  defaultBranch = main
